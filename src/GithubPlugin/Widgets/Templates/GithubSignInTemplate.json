{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "${message}",
          "wrap": true,
          "horizontalAlignment": "Center",
          "height": "stretch",
          "size": "Default",
          "weight": "Bolder"
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.Execute",
              "title": "%Widget_Template_Button/SignIn%",
              "verb": "SignIn",
              "tooltip": "%Widget_Template_Tooltip/SignIn%"
            }
          ],
          "horizontalAlignment": "center",
          "spacing": "ExtraLarge"
        }
      ],
      "horizontalAlignment": "center",
      "spacing": "None"
    }
  ]
}