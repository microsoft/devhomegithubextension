{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "1",
          "items": [
            {
              "type": "Image",
              "url": "data:image/png;base64,${titleIconUrl}",
              "size": "Small"
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "9",
          "items": [
            {
              "type": "TextBlock",
              "text": "%Widget_Template/ReviewRequested%",
              "size": "Large",
              "style": "Heading",
              "wrap": true
            }
          ],
          "verticalContentAlignment": "Center"
        }
      ]
    },
    {
        "type": "TextBlock",
        "text": "${openCount} %Widget_Template/Open%",
        "size": "small",
        "style": "Heading",
        "weight": "Lighter",
        "wrap": true
    },
    {
      "$data": "${items}",
      "type": "ColumnSet",
      "style": "emphasis",
      "selectAction": {
        "type": "Action.OpenUrl",
        "url": "${url}",
        "tooltip": "%Widget_Template_Tooltip/OpenIssue%"
      },
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "data:image/png;base64,${iconUrl}",
              "size": "small"
            }
          ],
          "width": "12px"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "${title}"
            },
            {
              "type": "TextBlock",
              "spacing": "None",
              "text": "${repository}"
            },
            {
              "type": "TextBlock",
              "spacing": "None",
              "text": "#${number} %Widget_Template/Opened% ${date} %Widget_Template/By% ${user}",
              "isSubtle": true,
              "wrap": true
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}