{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 1,
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "Image",
              "url": "https://learn.microsoft.com/en-us/windows/apps/design/style/images/segoe-mdl/e958.png",
              "size": "small"
            }
          ]
        },
        {
          "type": "Column",
          "width": 9,
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "TextBlock",
              "text": "${selected_repo}",
              "size": "large",
              "style": "heading",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "$when":  "${(count(pulls) == 0)}",
      "items": [
        {
          "type": "TextBlock",
          "text": "${if(is_loading_data, '%Widget_Template/ContentLoading%', '%Widget_Template/EmptyPulls%')}",
          "wrap": true,
          "horizontalAlignment": "center"
        }
      ],
      "verticalContentAlignment": "center",
      "style": "accent",
      "separator": true
    },
    {
      "$data": "${pulls}",
      "type": "Container",
      "style": "emphasis",
      "spacing": "small",
      "selectAction": {
        "type": "Action.OpenUrl",
        "url": "${url}",
        "tooltip": "%Widget_Template_Tooltip/OpenPullRequest%"
      },
      "items": [
        {
          "type": "TextBlock",
          "text": "${title}",
          "weight": "bolder",
          "wrap": true,
          "maxLines": 2
        },
        {
          "type": "TextBlock",
          "text": "#${number}",
          "isSubtle": true,
          "spacing": "None"
        },
        {
          "type": "ColumnSet",
          "spacing": "small",
          "columns": [
            {
              "type": "Column",
              "width": "12px",
              "items": [
                {
                  "type": "Image",
                  "style": "Person",
                  "url": "${avatar}",
                  "size": "small"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${user}",
                  "isSubtle": true,
                  "size": "small",
                  "spacing": "None"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}