{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "%Widget_Template/AssignedTitle%",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "size": "Large",
                    "weight": "Bolder"
                },
                {
                    "type": "TextBlock",
                    "text": "%Extension_Name/GitHub%",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "spacing": "None",
                    "size": "Small",
                    "isSubtle": true,
                    "weight": "Lighter"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "%Widget_Template/PR_Issue_description%",
            "wrap": true,
            "horizontalAlignment": "Center",
            "spacing": "None",
            "size": "Small",
            "isSubtle": true,
            "weight": "Lighter"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 2,
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Show in widget",
                            "wrap": true,
                            "horizontalAlignment": "Left",
                            "spacing": "None",
                            "size": "Small",
                            "isSubtle": true,
                            "weight": "Lighter"
                        },
                        {
                            "type": "TextBlock",
                            "text": "Select what items appear in this widget",
                            "wrap": true,
                            "horizontalAlignment": "Left",
                            "spacing": "None",
                            "size": "Small",
                            "isSubtle": true,
                            "weight": "Lighter"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": 1,
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "Input.ChoiceSet",
                            "id": "ShowCategory",
                            "style": "compact",
                            "isMultiSelect": false,
                            "value": "Issues PRs",
                            "choices": [
                                {
                                    "title": "Issues",
                                    "value": "Issues"
                                },
                                {
                                    "title": "Pull Requests",
                                    "value": "PRs"
                                },
                                {
                                    "title": "Isuues & Pull Requests",
                                    "value": "Issues PRs"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Execute",
            "title": "Submit",
            "horizontalAlignment": "Center",
            "verb": "Submit",
            "associatedInputs": "auto"
        }
    ]
}