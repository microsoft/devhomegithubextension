{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 1,
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "Image",
              "url": "https://learn.microsoft.com/en-us/windows/apps/design/style/images/segoe-mdl/e958.png",
              "size": "small"
            }
          ]
        },
        {
          "type": "Column",
          "width": 9,
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "TextBlock",
              "text": "${selected_repo}",
              "size": "large",
              "style": "heading",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "$when":  "${count(issues) == 0}",
      "items": [
        {
          "type": "TextBlock",
          "text": "%Widget_Template/ContentLoading%",
          "wrap": true,
          "horizontalAlignment": "center"
        }
      ],
      "verticalContentAlignment": "center",
      "style": "accent",
      "separator": true
    },
    {
      "$data": "${issues}",
      "type": "ColumnSet",
      "style": "emphasis",
      "spacing": "small",
      "selectAction": {
        "type": "Action.OpenUrl",
        "url": "${url}",
        "tooltip": "%Widget_Template_Tooltip/OpenIssue%"
      },
      "columns": [
        {
          "type": "Column",
          "width": "12px",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "${avatar}",
              "size": "small"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "size": "medium",
              "weight": "bolder",
              "text": "${title}",
              "wrap": true,
              "maxLines": 2
            },
            {
              "type": "LabelGroup",
              "labels": [
                {
                  "$data": "${labels}",
                  "text": "${name}",
                  "color": "${color}"
                }
              ]
            },
            {
              "type": "TextBlock",
              "size": "small",
              "spacing": "small",
              "text": "#${number} %Widget_Template/Opened% {{DATE(${formatDateTime(date, 'yyyy-MM-ddTHH:mm:ssZ')}, COMPACT)}} %Widget_Template/By% ${user}",
              "isSubtle": true,
              "wrap": true,
              "maxLines": 2
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}