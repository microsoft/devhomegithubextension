{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "1",
          "items": [
            {
              "type": "Image",
              "url": "https://learn.microsoft.com/en-us/windows/apps/design/style/images/segoe-mdl/e958.png",
              "size": "Small"
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "9",
          "items": [
            {
              "type": "TextBlock",
              "text": "${selected_repo}",
              "size": "Large",
              "style": "Heading",
              "wrap": true
            }
          ],
          "verticalContentAlignment": "Center"
        }
      ]
    },
    {
      "$data": "${issues}",
      "type": "ColumnSet",
      "style": "emphasis",
      "selectAction": {
        "type": "Action.OpenUrl",
        "url": "${url}",
        "tooltip": "%Widget_Template_Tooltip/OpenIssue%"
      },
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "${avatar}",
              "size": "small"
            }
          ],
          "width": "12px"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "${title}",
              "wrap": true,
              "maxLines": 2
            },
            {
              "type": "TextBlock",
              "spacing": "None",
              "weight": "lighter",
              "size": "small",
              "isSubtle": true,
              "text": "${labelsString} "
            },
            {
              "type": "TextBlock",
              "spacing": "None",
              "text": "#${number} %Widget_Template/Opened% {{DATE(${formatDateTime(date, 'yyyy-MM-ddTHH:mm:ssZ')}, COMPACT)}} %Widget_Template/By% ${user}",
              "isSubtle": true,
              "wrap": true,
              "maxLines": 2
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}