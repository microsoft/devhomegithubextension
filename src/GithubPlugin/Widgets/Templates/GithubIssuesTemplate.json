{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 1,
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "Image",
              "url": "data:image/png;base64,${issues_icon_data}",
              "size": "medium",
              "horizontalAlignment": "Center"
            }
          ]
        },
        {
          "type": "Column",
          "width": 9,
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "TextBlock",
              "text": "${selected_repo}",
              "size": "large",
              "style": "heading",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "$when":  "${(count(issues) == 0)}",
      "items": [
        {
          "type": "TextBlock",
          "text": "${if(is_loading_data, '%Widget_Template/ContentLoading%', '%Widget_Template/EmptyIssues%')}",
          "wrap": true,
          "weight": "bolder",
          "horizontalAlignment": "center"
        }
      ],
      "spacing": "medium",
      "verticalContentAlignment": "center"
    },
    {
      "$data": "${issues}",
      "type": "ColumnSet",
      "style": "emphasis",
      "spacing": "small",
      "selectAction": {
        "type": "Action.OpenUrl",
        "url": "${url}",
        "tooltip": "%Widget_Template_Tooltip/OpenIssue%"
      },
      "columns": [
        {
          "type": "Column",
          "width": "12px",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "data:image/png;base64,${icon}",
              "size": "small"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "size": "medium",
              "weight": "bolder",
              "text": "${title}",
              "wrap": true,
              "maxLines": 2
            },
            {
              "type": "LabelGroup",
              "labels": [
                {
                  "$data": "${labels}",
                  "text": "${name}",
                  "color": "${color}"
                }
              ]
            },
            {
              "type": "TextBlock",
              "size": "small",
              "spacing": "small",
              "text": "#${number} %Widget_Template/Opened% {{DATE(${formatDateTime(date, 'yyyy-MM-ddTHH:mm:ssZ')}, COMPACT)}} %Widget_Template/By% ${user}",
              "isSubtle": true,
              "wrap": true,
              "maxLines": 2
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}