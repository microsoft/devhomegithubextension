{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "%Widget_Template/Ssh_wallet%",
          "wrap": true,
          "horizontalAlignment": "Center",
          "size": "Large",
          "weight": "Bolder"
        }
      ]
    },
    {
      "type": "Input.Text",
      "id": "Repo",
      "label": "%Widget_Template_Label/Config_file_path%",
      "inlineAction": {
        "type": "Action.Execute",
        "tooltip": "%Widget_Template_Tooltip/Submit%",
        "verb": "CheckConfigFilel",
        "iconUrl": "https://learn.microsoft.com/en-us/uwp/api/windows.ui.xaml.controls/images/segoe-mdl/e122.png"
      },
      "spacing": "Medium",
      "placeholder": "%Widget_Template_Input/ConfigFilePlaceholder%",
      "value": "${$root.configuration.sshConfigFile}"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "${errorMessage}",
          "wrap": true,
          "horizontalAlignment": "Center"
        }
      ],
      "$when": "${errorMessage != null}",
      "separator": true,
      "horizontalAlignment": "Center",
      "verticalContentAlignment": "Center",
      "style": "warning"
    }
  ]
}